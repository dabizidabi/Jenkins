#!groovy
// Check ubuntu properties
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }
    stages {
        stage("Build docker image") {
            steps {
                dir ('docker') {
                sh 'docker build --network=host -t app:v1 .'
                }
            }
        }
    }
}
